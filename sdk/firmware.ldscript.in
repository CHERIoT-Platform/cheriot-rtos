PHDRS
{
	headers PT_PHDR PHDRS ;

	# We define multiple loadable sections.  The build system will instantiate
	# at least two, depending on the board configuration, for "rocode" and
	# "rwdata", and perhaps others.
	@ldscript_top_phdrs@
}

SECTIONS
{
	# The build system generates sections and assigns them within its PHDRs.
	@ldscript_top_sections@

	# Explicitly discard sections from the loader not claimed elsewhere.
	/DISCARD/ : { *.loader.o(*) }
}
